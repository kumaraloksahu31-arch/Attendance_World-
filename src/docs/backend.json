{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "role": {
          "type": "string",
          "enum": ["student", "employee", "admin"],
          "description": "The role of the user."
        },
        "phone": {
          "type": "string",
          "description": "The user's phone number."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        }
      },
      "required": ["uid", "displayName", "email", "role", "createdAt"]
    },
    "AttendanceSheet": {
      "title": "Attendance Sheet",
      "description": "Represents an attendance sheet created by a user.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the attendance sheet."
        },
        "type": {
          "type": "string",
          "enum": ["student", "employee"],
          "description": "The type of members in the sheet."
        },
        "view": {
            "type": "string",
            "enum": ["monthly", "weekly"],
            "description": "The default view of the sheet."
        },
        "createdBy": {
          "type": "string",
          "description": "The UID of the user who created the sheet."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the sheet was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the sheet was last updated."
        },
        "memberIds": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "A list of user IDs who are members of this sheet."
        }
      },
      "required": ["title", "type", "createdBy", "createdAt", "updatedAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/sheets/{sheetId}": {
        "schema": {
            "$ref": "#/entities/AttendanceSheet"
        },
        "description": "Stores the attendance sheets created by a specific user."
    }
  }
}
